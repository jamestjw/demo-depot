<% if line_item == @current_item %>
<tr class='line-item-highlight'>
<% else %>
<tr>  
<% end %>  
    <td>
        <%= line_item.quantity %>&times; 
        <%= button_to '-', quantity_line_item_path(line_item.id), method: :put , remote: true %> 
        <%= button_to '+', quantity_line_item_path(line_item.id), method: :put , params: { increment: true } , remote: true %> 
    </td>
    <td><%= line_item.product.title %></td>
    <td class="item_price"><%= number_to_currency(line_item.total_price) %> </td>
    <td> <%= button_to 'Remove', line_item, method: :delete, data: { confirm: 'Remove this item from your cart?' } %> </td>
</tr>
